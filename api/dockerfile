# Dockerfile para la API
FROM python:3.9-slim

# Instalar Tkinter y dependencias si es necesario
RUN apt-get update && apt-get install -y python3-tk libgtk-3-0 libx11-6

WORKDIR /app

# Copiar requirements.txt e instalar dependencias
COPY api/requirements.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copiar la aplicaci√≥n
COPY . .



CMD ["uvicorn", "api/main:app", "--host", "0.0.0.0", "--port", "8000", "--ssl-keyfile", "/certs/api-key.pem", "--ssl-ca-certs", "/certs/ca-cert.pem", "--ssl-cert-reqs", "2", "--ssl-certfile", "/certs/api-cert.pem"]
